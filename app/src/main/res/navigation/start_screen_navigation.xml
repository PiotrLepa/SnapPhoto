<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/start_navigation" app:startDestination="@id/startFragment">

    <fragment android:id="@+id/startFragment"
              android:name="com.example.snapphoto.ui.start.start.StartFragment"
              android:label=" ">
        <action android:id="@+id/action_startFragment_to_registrationFragment"
                app:destination="@id/registrationFragment"/>
        <action android:id="@+id/action_startFragment_to_loginFragment"
                app:destination="@+id/loginFragment"/>
    </fragment>

    <fragment android:id="@+id/registrationFragment"
              android:name="com.example.snapphoto.ui.start.registration.RegistrationFragment"
              android:label=""
              tools:layout="@layout/registration_fragment">
        <action android:id="@+id/action_registrationFragment_to_mainActivity" app:destination="@id/mainActivity"
                app:popUpToInclusive="false" app:launchSingleTop="true"/>
    </fragment>
    <fragment android:id="@+id/loginFragment"
              android:name="com.example.snapphoto.ui.start.login.LoginFragment"
              android:label=""
              tools:layout="@layout/login_fragment">
        <action android:id="@+id/action_loginFragment_to_mainActivity" app:destination="@id/mainActivity"
                app:popUpToInclusive="false" app:popUpTo="@+id/mainActivity" app:launchSingleTop="true"/>
    </fragment>
    <activity android:id="@+id/mainActivity" android:name="com.example.snapphoto.ui.main.MainActivity"
              android:label="activity_main" tools:layout="@layout/activity_main"/>
</navigation>