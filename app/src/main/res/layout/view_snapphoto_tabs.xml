<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        tools:background="@color/colorLightGray"
        tools:layout_gravity="bottom">

    <ImageView
            android:id="@+id/captureImage"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/large_circle"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="96dp"/>

    <ImageView
            android:id="@+id/friendsImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_chat_bubble_white_24dp"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="56dp"
            android:layout_marginStart="24dp"/>

    <ImageView
            android:id="@+id/storiesImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_group_white_24dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="24dp"/>

    <ImageView
            android:id="@+id/savedPhotosImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_collections_white_24dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="56dp"/>

    <View
            android:id="@+id/indicator"
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:background="@drawable/indicator_background"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="44dp"/>

</FrameLayout>