<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewmodel" type="com.example.snapphoto.ui.main.camera.CameraViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main.camera.CameraFragment">

        <com.example.snapphoto.ui.view.VerticalViewPager
                android:id="@+id/verticalViewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:currentPage="@={viewmodel.currentPage}"
                app:interceptAllTouchEventsWhenOpen="@{viewmodel.currentPage}"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>