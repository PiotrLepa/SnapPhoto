<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="labelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelText" app:layout_constraintStart_toEndOf="@+id/progressBar"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/labelText"
            app:layout_constraintTop_toTopOf="@+id/labelText" app:layout_constraintBottom_toBottomOf="@+id/labelText"
            android:layout_width="wrap_content" android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier2" app:barrierDirection="top"
                                              app:constraint_referenced_ids="labelText,progressBar"
                                              tools:layout_editor_absoluteY="731dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>