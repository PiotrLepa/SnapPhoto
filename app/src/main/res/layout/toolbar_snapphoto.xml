<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/colorBlue">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="0dp"
            android:id="@+id/guideline"
            android:orientation="horizontal"/>
    <ImageView
            android:layout_height="@dimen/actionBarIcon" app:srcCompat="@drawable/default_user"
            android:id="@+id/userImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/actionBarIcon"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginStart="@dimen/marginToolbarIcon" android:layout_marginTop="@dimen/marginToolbarIcon"/>
    <ImageView
            app:srcCompat="@drawable/ic_search_white_40dp"
            android:id="@+id/searchImage"
            app:layout_constraintStart_toEndOf="@+id/userImage"
            app:layout_constraintBottom_toBottomOf="@+id/userImage"
            android:layout_marginStart="@dimen/marginToolbarIcon"
            app:layout_constraintTop_toTopOf="@+id/userImage" android:layout_height="@dimen/actionBarIcon"
            android:layout_width="@dimen/actionBarIcon"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/actionBarIcon"
            android:inputType="text"
            android:hint="@string/search"
            android:textColorHint="@android:color/white"
            android:ems="10"
            android:id="@+id/searchEditText"
            android:background="@null"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/searchImage" android:layout_marginStart="@dimen/marginToolbarIcon"
            app:layout_constraintTop_toTopOf="@+id/searchImage"
            app:layout_constraintBottom_toBottomOf="@+id/searchImage" android:layout_marginEnd="@dimen/marginToolbarIcon"
            app:layout_constraintEnd_toStartOf="@+id/addFriendImage" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_height="@dimen/actionBarIcon" app:srcCompat="@drawable/ic_friend_add_white_40dp"
            android:id="@+id/addFriendImage"
            app:layout_constraintTop_toTopOf="@+id/searchEditText"
            app:layout_constraintBottom_toBottomOf="@+id/searchEditText"
            app:layout_constraintEnd_toStartOf="@+id/switchCameraLensImage" android:layout_marginEnd="@dimen/marginToolbarIcon"
            android:layout_width="@dimen/actionBarIcon"/>
    <ImageView
            android:layout_height="@dimen/actionBarIcon" app:srcCompat="@drawable/ic_camera_front_white_40dp"
            android:id="@+id/switchCameraLensImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/marginToolbarIcon"
            app:layout_constraintTop_toTopOf="@+id/addFriendImage"
            app:layout_constraintBottom_toBottomOf="@+id/addFriendImage" android:layout_width="@dimen/actionBarIcon"/>
    <ImageView
            android:layout_width="@dimen/actionBarIcon"
            android:layout_height="@dimen/actionBarIcon" app:srcCompat="@drawable/ic_flash_off_white_40dp"
            android:id="@+id/flashImage"
            app:layout_constraintTop_toBottomOf="@+id/switchCameraLensImage"
            app:layout_constraintEnd_toEndOf="@+id/switchCameraLensImage"
            app:layout_constraintStart_toStartOf="@+id/switchCameraLensImage"
            android:layout_marginTop="@dimen/marginToolbarFlashIcon"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>