<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="viewmodel" type="com.example.snapphoto.ui.start.login.LoginViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.start.login.LoginFragment">

        <TextView
                android:text="@string/log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/emailTextInput"
                app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTextInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/SnapPhotoTextInputLayoutStyle"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintBottom_toTopOf="@+id/usernameTextInput" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:text="@={viewmodel.emailTextInput}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameTextInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/SnapPhotoTextInputLayoutStyle"
                app:layout_constraintTop_toBottomOf="@+id/emailTextInput"
                app:layout_constraintBottom_toTopOf="@+id/logInButton"
                app:layout_constraintEnd_toEndOf="@+id/emailTextInput"
                app:layout_constraintStart_toStartOf="@+id/emailTextInput">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:text="@={viewmodel.passwordTextInput}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/errorTextView"
                tools:text="@string/please_fill_all_fields"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:errorMessage="@{viewmodel.errorMessage}"
                android:textColor="@android:color/holo_red_light"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextInput" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>

        <com.example.snapphoto.ui.view.ProgressButton
                android:id="@+id/logInButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/SnapPhotoButtonTheme"
                android:text="@string/log_in"
                android:textColor="@android:color/white"
                app:onLoadingText="@string/logging_in"
                app:backgroundColor="@color/colorBlue"
                app:onPressBackgroundColor="@color/colorBlueDark"
                app:onLoadingBackgroundColor="@color/colorYellow"
                app:customOnClick="@{() -> viewmodel.logInButtonClicked()}"
                hideKeyboardOnClick="@{true}"
                app:startLoading="@{viewmodel.isLoading}"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>